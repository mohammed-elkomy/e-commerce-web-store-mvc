<!-- banner-bottom -->
<div class="banner-bottom">
    <div class="container">
        <div class="banner-bottom-grids">
            @if (Model.Count >= 3)
            {
                <div class="banner-bottom-grid-left animated wow slideInLeft" data-wow-delay=".5s">
                    <div class="grid">
                        <figure class="effect-julia">
                            <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[0].Id">
                                <img src="@(Model[0].Images.FirstOrDefault()?.Url)" alt=" " class="img-responsive" />
                                <figcaption>
                                    <h3>@Model[0].Name</h3>
                                    <div>
                                        <p>@Model[0].ShortDescription</p>
                                    </div>
                                </figcaption>
                            </a>
                        </figure>
                    </div>
                </div>
                <div class="banner-bottom-grid-left1 animated wow slideInUp" data-wow-delay=".5s">
                    <div class="banner-bottom-grid-left-grid left1-grid grid-left-grid1">
                        <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[1].Id">
                            <div class="banner-bottom-grid-left-grid1">
                                <img src="@(Model[1].Images.FirstOrDefault()?.Url)" alt=" " class="img-responsive" />
                            </div>
                            <div class="banner-bottom-grid-left1-pos">
                                <p>@Model[1].Name</p>
                            </div>
                        </a>
                    </div>
                    <div class="banner-bottom-grid-left-grid left1-grid grid-left-grid1">
                        <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[2].Id">
                            <div class="banner-bottom-grid-left-grid1">
                                <img src="@(Model[2].Images.FirstOrDefault()?.Url)" alt=" " class="img-responsive" />
                            </div>
                            <div class="banner-bottom-grid-left1-position">
                                <div class="banner-bottom-grid-left1-pos1">
                                    <p>@Model[2].Name</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="banner-bottom-grid-right animated wow slideInRight" data-wow-delay=".5s">
                    <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[3].Id">
                        <div class="banner-bottom-grid-left-grid grid-left-grid1">
                            <div class="banner-bottom-grid-left-grid1">
                                <img src="@(Model[3].Images.FirstOrDefault()?.Url)" alt=" " class="img-responsive" />
                            </div>
                            <div class="grid-left-grid1-pos">
                                <p>@Model[3].Name</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!-- //banner-bottom -->
<!-- collections -->
<div class="new-collections">
    <div class="container">
        <h3 class="animated wow zoomIn" data-wow-delay=".5s">Best in Shop</h3>
        <div class="new-collections-grids">
            @for (var i = 4; i < Model.Count- Model.Count%2; i = i + 2)
            {
                <div class="col-md-3 new-collections-grid">
                    <div class="new-collections-grid1 animated wow slideInUp" data-wow-delay=".5s">
                        <div class="new-collections-grid1-image">
                            <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[i].Id" class="product-image">
                                <img src="@Model[i].Images.FirstOrDefault()?.Url" alt=" " class="img-responsive" />
                            </a>
                            <div class="new-collections-grid1-image-pos">
                                <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[i].Id">Quick View</a>
                            </div>
                            <div class="new-collections-grid1-right">
                                <div class="rating">
                               
                                        <div class="rating-left">
                                            <img src="@Model[i + 1].Images.First().Url" alt=" " class="img-responsive" />
                                        </div>
                                    
                                    <div class="clearfix"> </div>
                                </div>
                            </div>
                        </div>
                        <h4><a asp-controller="Products" asp-action="Single" asp-route-id="@Model[i].Id">@Model[i].Name</a></h4>
                        <p>@Model[i].ShortDescription</p>
                        <div class="new-collections-grid1-left simpleCart_shelfItem">
                            <p>
                                <span class="item_price">@Model[i].Price.ToString("C")</span>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model[i].Id" asp-route-quantity="1" class="item_add">add to cart </a>
                            </p>
                        </div>
                    </div>
                    <div class="new-collections-grid1 animated wow slideInUp" data-wow-delay=".5s">
                        <div class="new-collections-grid1-image">
                            <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[i+1].Id" class="product-image">
                                <img src="@Model[i+1].Images.FirstOrDefault()?.Url" alt=" " class="img-responsive" />
                            </a>
                            <div class="new-collections-grid1-image-pos">
                                <a asp-controller="Products" asp-action="Single" asp-route-id="@Model[i+1].Id">Quick View</a>
                            </div>
                            <div class="new-collections-grid1-right">
                                <div class="rating">
                                   
                                        <div class="rating-left">
                                            <img src="@Model[i + 1].Images.First().Url" alt=" " class="img-responsive" />
                                        </div>
                                   
                                    <div class="clearfix"> </div>
                                </div>
                            </div>
                        </div>
                        <h4><a asp-controller="Products" asp-action="Single" asp-route-id="@Model[i+1].Id">@Model[i + 1].Name</a></h4>
                        <p>@Model[i + 1].ShortDescription</p>
                        <div class="new-collections-grid1-left simpleCart_shelfItem">
                            <p>
                                <span class="item_price">@Model[i + 1].Price.ToString("C")</span>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model[i+1].Id" asp-route-quantity="1" class="item_add">add to cart </a>
                            </p>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!-- //collections -->
<!-- collections-bottom -->
<div class="collections-bottom">
    <div class="container">
        @{
            if (ViewData["LeastSold"] is Product p)
            {
                <div class="collections-bottom-grids" style="background:url(@(p.Images.FirstOrDefault()?.Url))">
                    <div class="collections-bottom-grid animated wow slideInLeft" data-wow-delay=".5s">
                        <h3>45% Offer</h3>
                    </div>
                </div>
            }
        }
        <div class="newsletter animated wow slideInUp" data-wow-delay=".5s">
            <h3>Newsletter</h3>
            <p>Join us now to get all news and special offers.</p>
            <form asp-controller="Auth" asp-action="Register">
                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                <input name="email" type="email" value="Enter your email address" onfocus="this.value = '';" onblur="if (this.value == '') { this.value = 'Enter your email address'; }" required="">
                <input type="hidden" value="true" name="SubscripedToNews" />
                <input type="submit" value="Join Us">
            </form>
        </div>
    </div>
</div>
