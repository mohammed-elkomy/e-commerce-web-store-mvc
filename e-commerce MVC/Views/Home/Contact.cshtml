@model ECommerce.Models.NewDb.Message
<!-- mail -->
<div class="mail animated wow zoomIn" data-wow-delay=".5s">
    <div class="container">
        <h3>Mail Us</h3>
        <p class="est animated wow zoomIn" data-wow-delay=".5s">Welcome to the most useless thing in the entire universe.</p>
        <div class="mail-grids">


            <div class=" mail-grid-left animated wow slideInLeft" data-wow-delay=".5s">
                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert" id="error_message" asp-validation-summary="All">
                    </div>
                }
                @if (ViewData["success"]?.ToString() == "success")
                {
                    <div class="success alert-success">
                        Your message was submitted successfully.
                    </div>
                }
                <form asp-controller="Home" asp-action="Contact" method="post" novalidate>
                    <input type="text" asp-for="Name" placeholder="Name">
                    <input type="email" asp-for="Email" placeholder="Email">
                    <input type="text" asp-for="Subject" placeholder="Subject">
                    <textarea placeholder="Message..." type="text"  asp-for="Content"></textarea>
                    <input type="submit" value="Submit Now">
                </form>
            </div>

            <div class="clearfix"> </div>
        </div>
        <iframe class="animated wow slideInLeft" data-wow-delay=".5s" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3098.7638135888296!2d-77.47669308468912!3d39.04350424592369!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b63eb3bc8da92b%3A0x78c8e09ab1cabc90!2sShopping+Plaza%2C+Ashburn%2C+VA+20147%2C+USA!5e0!3m2!1sen!2sin!4v1457602090579" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</div>
<!-- //mail -->
